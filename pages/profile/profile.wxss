/* profile.wxss */
.bm-profile-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.bm-profile-avatar-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 20px;
    width: 100%;
    padding-top: 30px;
}

.bm-profile-app-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-bottom: 20px;
    width: 100%;
    padding-top: 10px;
}

.bm-profile-avatar {
    width: 128px;
    height: 128px;
    border-radius: 50%;
    text-align: center;
}

.bm-profile-name {
    font-size: 20px;
    margin-top: 10px;
}

.bm-profile-desc {
    font-size: 16px;
    color: #999999;
    margin-top: 32px;
}

.bm-splash-icon {
    width: 48px;
    height: 48px;
}

.bm-splash-text {
    margin-left: 5px;
}