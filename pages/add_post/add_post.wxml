<!-- add_post.wxml -->
<view class="page">
  <view class="page__bd">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{TopTips}}</view>

    <view class="weui-cells__title">需求信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">需求</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindDemandChange" value="{{demandIndex}}" range="{{courses}}">
            <view class="weui-select weui-select_in-select-after">{{courses[demandIndex]}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">提供</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindSupplyChange" value="{{supplyIndex}}" range="{{courses}}">
            <view class="weui-select weui-select_in-select-after">{{courses[supplyIndex]}}</view>
          </picker>
        </view>
      </view>
    </view>
    <!-- weui-cells -->
    <view class="weui-cells__title">留言</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" bindinput="bindCommentChange" placeholder="请输入文本" style="height: 3.3em"  />
          <view class="weui-textarea-counter">{{commentLength}}/200</view>
        </view>
      </view>
    </view> 
    <!-- weui-cells -->
    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" bindtap="submitAddPost">确定</button>
    </view>
  </view>
</view>